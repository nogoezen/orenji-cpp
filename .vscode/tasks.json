{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "c:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-std=c++17",
                "-Wall",
                "-I${workspaceFolder}",
                "-I${workspaceFolder}/include",
                "-D__USE_MINGW_ANSI_STDIO=1",
                "-D_GLIBCXX_USE_CXX11_ABI=1",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/utils/JsonLoader.cpp",
                "${workspaceFolder}/src/utils/GameConfig.cpp",
                "${workspaceFolder}/src/utils/DataSystem.cpp",
                "${workspaceFolder}/src/utils/DataManager.cpp",
                "${workspaceFolder}/src/models/Player.cpp",
                "${workspaceFolder}/src/game/World.cpp",
                "${workspaceFolder}/src/game/LanguageManager.cpp",
                "${workspaceFolder}/src/game/GameData.cpp",
                "${workspaceFolder}/src/game/Game.cpp",
                "-lstdc++fs",
                "-o",
                "${workspaceFolder}/bin/UnchartedWaters.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "c:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++17",
                "-I${workspaceFolder}",
                "-I${workspaceFolder}/include",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "c:/msys64/ucrt64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}